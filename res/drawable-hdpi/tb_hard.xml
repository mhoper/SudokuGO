<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
		        <shape>
		            <solid android:color="#e79429" />
		            <corners android:radius="5dp" />
		        </shape>
       		</item>
       		<!-- 叠加一条线在下文 -->
            <item android:left="20dp"
                  android:top="30dp"
                  android:right="20dp"
                  android:bottom="2dp" >
                <shape android:shape="line">
                    <stroke android:width="3dp" android:color="#74B815"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
	        <shape>
	            <solid android:color="#f6aa3e" />
	            <corners android:radius="5dp" />
	        </shape>
       		</item>
       		
            <item android:left="20dp"
                  android:top="30dp"
                  android:right="20dp"
                  android:bottom="2dp" >
                <shape android:shape="line">
                    <stroke android:width="3dp" android:color="#74B815"/>
                </shape>
       		</item>
        </layer-list>
    </item>
</selector>